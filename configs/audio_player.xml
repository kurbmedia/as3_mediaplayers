<?xml version = '1.0'?>
<!-- 
	Sample audio player configuration file.
-->
<config>
	<player backgroundColor="0x06A9DE" strokeColor="0x333333" borderRadius="10" />
	<controls>
		<!-- 
			
			List out any controls used in the swf file on export. Available options are:
				play_button
				play_pause_button
				pause_button
				mute_button
				progress_bar
				timer_text
				
			Available attributes for buttons: backgroundColor, iconColor, hoverColor, downColor
			Available attributes for progress bar: backgroundColor, strokeColor
			Available attributes for timer test: fontColor
			
		-->
		<control name="play_pause_button" backgroundColor="0x04455b,0x042530" iconColor="" hoverColor="" downColor="" />
		<control name="mute_button" backgroundColor="0x04455b,0x042530" iconColor="" hoverColor="" downColor="" />
		<control name="progress_bar" backgroundColor="0x04455b,0x042530" strokeColor="" />
		<control name="timer_text" fontColor="0xFFFFFF" />
	</controls>
</config>